<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/AccueilFragment">

    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.test.jeanwalker.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >
        <action
            android:id="@+id/action_mapsFragment_to_mainFragment"
            app:destination="@id/AccueilFragment" />
    </fragment>
    <activity
        android:id="@+id/details"
        android:name="com.test.jeanwalker.Details"
        android:label="activity_details"
        tools:layout="@layout/activity_details" />
    <fragment
        android:id="@+id/AccueilFragment"
        android:name="com.test.jeanwalker.AccueilFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_accueil" >
        <action
            android:id="@+id/action_mainFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_details"
            app:destination="@id/details" />
        <action
            android:id="@+id/action_AccueilFragment_to_parametresFragment"
            app:destination="@id/parametresFragment" />
    </fragment>
    <fragment
        android:id="@+id/parametresFragment"
        android:name="com.test.jeanwalker.ParametresFragment"
        android:label="fragment_parametres"
        tools:layout="@layout/fragment_parametres" />
</navigation>